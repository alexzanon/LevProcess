<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TextView android:id="@+id/text1"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_marginTop="10dip"
            android:text="Nome do Processo:"
            android:textColor="#000000" />

        <EditText android:id="@+id/etNomeProcesso"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent" />

        <Button
            android:id="@+id/btBuscar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="15dip"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#1E90FF"
            android:textColor="#F8F8FF"
            android:text="Buscar" />

        <TextView android:id="@+id/text2"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_marginTop="10dip"
            android:text="Responsável pelo Processo:"
            android:textColor="#000000" />

        <EditText android:id="@+id/etResponsavel"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent" />

        <TextView android:id="@+id/text3"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:text="Papel do Responsável:"
            android:textColor="#000000" />

        <EditText android:id="@+id/etPapel"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent" />

        <TextView android:id="@+id/text4"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:text="Objetivo do Processo:"
            android:textColor="#000000" />

        <EditText android:id="@+id/etObjetivo"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent" />

        <TextView android:id="@+id/text5"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:text="Entradas do Processo:"
            android:textColor="#000000" />

        <EditText android:id="@+id/etEntradas"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent" />

        <TextView android:id="@+id/text6"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:text="Saídas do Processo:"
            android:textColor="#000000" />

        <EditText android:id="@+id/etSaidas"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent" />

        <Button
            android:id="@+id/botaoLimpar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="15dip"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#1E90FF"
            android:textColor="#F8F8FF"
            android:text="@string/login_btn_limpar_value" />

    </LinearLayout>
</ScrollView>