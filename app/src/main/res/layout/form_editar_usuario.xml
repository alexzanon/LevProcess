<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

    <TextView android:id="@+id/text1"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dip"
        android:text="Usuario:"
        android:textColor="#000000" />

    <EditText android:id="@+id/campoLogin"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent" />

    <TextView android:id="@+id/text2"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:text="Senha:"
        android:textColor="#000000" />

    <EditText android:id="@+id/campoSenha"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent" />

    <TextView android:id="@+id/text3"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:text="Nome:"
        android:textColor="#000000" />

    <EditText android:id="@+id/campoNome"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent" />

    <TextView android:id="@+id/text4"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:text="CPF:"
        android:textColor="#000000" />

    <EditText android:id="@+id/campoCpf"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent" />

    <TextView android:id="@+id/text5"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:text="Data de Nascimento:"
        android:textColor="#000000" />

    <EditText android:id="@+id/campoDataNascimento"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent" />

    <TextView android:id="@+id/text6"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:text="Telefone:"
        android:textColor="#000000" />

    <EditText android:id="@+id/campoTelefone"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent" />

    <TextView android:id="@+id/text7"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:text="E-mail:"
        android:textColor="#000000" />

    <EditText android:id="@+id/campoEmail"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent" />

    <TextView android:id="@+id/text8"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:text="Tipo:"
        android:textColor="#000000" />

    <RadioGroup
        android:id="@+id/rgGroup1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <RadioButton
            android:id="@+id/RBCliente"
            android:text="Cliente"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/RBModelador"
            android:text="Modelador"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/RBAdministrador"
            android:text="Administrador"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        </RadioGroup>

        <Button
            android:id="@+id/btSalvar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:padding="15dip"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#1E90FF"
            android:textColor="#F8F8FF"
            android:text="Salvar" />

        <Button
            android:id="@+id/btCancelar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:padding="15dip"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#1E90FF"
            android:textColor="#F8F8FF"
            android:text="Cancelar" />

        <Button
            android:id="@+id/btExcluir"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:padding="15dip"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#1E90FF"
            android:textColor="#F8F8FF"
            android:text="Excluir" />

    </LinearLayout>
</ScrollView>